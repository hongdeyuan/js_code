$hdgb_color = #e54847
$font_color_white = #ffffff

*
    margin 0
    padding 0

ul 
    li
        list-style none

html,body
    width 100%

.nav
    height 1.067rem
    font-size 18px
    text-align center
    line-height 1.067rem
    background-color $hdgb_color
    .arrow-left
        float left
        height 100%
        position relative
        &::after
            content ''
            width 14px;
            height 14px
            border 2px solid #fff
            position absolute
            top 50%
            left 16px
            transform: rotateZ(45deg) translateY(-50%)
            border-width: 0 0 2px 2px
    span
        color $font_color_white

.page
    background-color #f4f4f4
    position relative
    z-index 1
    margin 0
    color #555555
    min-width 3.1rem
    font 14px/1.5 Arial,Helvetica,sans-serif
    -webkit-user-select none
    -webkit-tap-highlight-color rgba(255,255,255,0)
    section
        background-color $font_color_white
        border-bottom 1px solid #e5e5e5
    .movie-header
        padding 0
        background-color #f8f8f8
        border-bottom none 
        .movie
            color $font_color_white
            padding 0.4rem
            line-height 1
            position relative
            box-sizing border-box
            filter blur(0)
            overflow auto
            &-background,
            &-filter
                position absolute
                top 0
                right 0
                left 0
                bottom 0
                width 100%
            &-background
                background-image url(./images/header-bg.jpg)
                background-size cover
                background-repeat no-repeat
                background-position-y 40%
                filter blur(.6rem)
                z-index 0
            &-filter
                background-color #40454d
                opacity .55
            &-container
                z-index 1
                position relative
                overflow auto
                .movie-cover
                    float left
                    width 2.854rem
                    height 4rem
                    border 1px solid #faf2f3
                    position relative
                    .link
                        cursor pointer
                        display block
                        width 100%
                        height 100%
                        img
                            width 100%
                .movie-content
                    overflow hidden
                    padding-left .4rem
                    .movie-name
                        font-size 17px
                        margin 0.08rem 0
                    .movie-ename
                        font-size 12px
                        margin-bottom .2rem
                    .movie-score
                        font-size 12px
                        margin-bottom .3rem
                        .rating
                            img 
                                width .48rem
                                height .48rem
                                margin-right 2px
                            .rating-score
                                font-size .4rem
                                color #ff4600