*
  margin 0
  padding 0

.container
  width 100%
  height 100vh
  background-color #eecc55
  position relative
  .left
    display inline-block
    width 12.5%
    height 12.5%
    background-color #fff
    position absolute
    top 50%
    transform translateY(-50%)
    left 25%
  .middle
    display inline-block
    width 12.5%
    height 12.5%
    position absolute
    background-color #000
    top 50%
    transform translateY(-50%)
    left 43.7%
  .right
    display inline-block
    width 12.5%
    position absolute
    height 12.5%
    background-color #fff
    top 50%
    transform translateY(-50%)
    right 25%

