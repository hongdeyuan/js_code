*
  margin 0
  padding 0

.container
  width 100%
  height 100vh
  background-color #eecc55
  display flex
  justify-content center
  align-items center
  .left
    display inline-block
    flex .125
    height 12.5%
    background-color #fff
    transform translateX(-50%)
  .middle
    display inline-block
    flex .125;
    height 12.5%
    background-color #000
  .right
    display inline-block
    flex .125
    height 12.5%
    transform translateX(50%)
    background-color #fff